{
  "name": "apollo",
  "version": "1.0.0",
  "description": "Cross-platform protection against nation-state hackers and crypto threats",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node scripts/build-production.js",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:current": "BUILD_TARGET=current node scripts/build-production.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "node scripts/test-and-build.js",
    "test:basic": "node -e \"console.log('Basic test passed')\"",
    "test:claude": "node test-claude-integration.js",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:e2e": "node test-e2e-comprehensive.js",
    "test:ui": "node test-ui-complete.js",
    "test:integration": "node test-integration.js",
    "test:scenarios": "node test-scenarios.js",
    "test:master": "node test-master-runner.js",
    "test:kpi": "node test-kpi-validation.js",
    "expand:signatures": "node scripts/expand-threat-signatures.js",
    "pull:real-intel": "node scripts/pull-real-threat-intel.js",
    "integrate:real-intel": "node scripts/integrate-real-intel.js",
    "audit:codebase": "node scripts/audit-and-fix-codebase.js",
    "test:backend-frontend": "node test-backend-frontend-integration.js",
    "test:data-flow": "node test-data-flow-validation.js",
    "test:real-integration": "node test-real-backend-frontend.js",
    "verify:all-data": "node scripts/verify-all-real-data.js",
    "audit:ui-backend": "node scripts/audit-ui-backend-connections.js",
    "test:ui-workflows": "node test-complete-ui-workflows.js",
    "test:frontend-complete": "node test-comprehensive-frontend.js",
    "test:all": "npm run test:comprehensive",
    "test:powershell": "powershell -ExecutionPolicy Bypass -File scripts/run-tests-powershell.ps1",
    "beta:validate": "npm run test:comprehensive && echo 'Beta validation complete'",
    "beta:validate:ps": "powershell -ExecutionPolicy Bypass -File scripts/run-tests-powershell.ps1",
  "build:beta-unsigned": "node scripts/build-beta-unsigned.js",
    "docs:serve": "echo 'Documentation available in docs/ directory'",
    "docs:validate": "echo 'Validating documentation links and examples'",
    "lint": "echo 'Linting...' && echo 'No linting rules configured'",
    "setup-dev": "npm install",
    "install-service": "node src/service/apollo-service.js --install",
    "uninstall-service": "node src/service/apollo-service.js --uninstall"
  },
  "build": {
    "appId": "com.apollo.app",
    "productName": "Apollo",
    "copyright": "Â© 2025 Apollo Project",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "ui/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "binaries",
        "to": "binaries",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/apollo-icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "Apollo-Setup-${version}-${arch}.${ext}",
      "sign": {
        "certificateFile": "certificates/apollo-code-sign.p12",
        "certificatePassword": "${env.CERTIFICATE_PASSWORD}"
      },
      "signAndEditExecutable": true,
      "signDlls": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/apollo-icon.jpg",
      "category": "public.app-category.security",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "Apollo-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/apollo-icon.jpg",
      "category": "Security",
      "artifactName": "Apollo-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/apollo-icon.ico",
      "uninstallerIcon": "assets/apollo-icon.ico",
      "installerHeaderIcon": "assets/apollo-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Apollo",
      "runAfterFinish": true,
      "allowElevation": true,
      "perMachine": true,
      "include": "build/installer.nsh"
    },
    "dmg": {
      "title": "Apollo ${version}",
      "icon": "assets/apollo-icon.jpg",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": {
      "provider": "github",
      "owner": "apollo-shield",
      "repo": "apollo-releases"
    }
  },
  "author": {
    "name": "Apollo Project",
    "email": "security@apollo-shield.org"
  },
  "license": "MIT",
  "keywords": [
    "security",
    "antivirus",
    "pegasus",
    "nation-state",
    "cryptocurrency",
    "protection",
    "electron",
    "cross-platform",
    "apollo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/apollo-shield/desktop-app.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.29.0",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.7",
    "ethers": "^6.9.0",
    "fs-extra": "^11.2.0",
    "node-machine-id": "^1.1.12",
    "node-windows": "^1.0.0-beta.8",
    "ps-list": "^8.1.1",
    "systeminformation": "^5.21.22",
    "winreg": "^1.2.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jsdom": "^27.0.0",
    "puppeteer": "^24.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
